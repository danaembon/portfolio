---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/Linkedin.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import SocialPill from '../components/SocialPill.astro'
import MailIcon from '../components/icons/Mail.astro'
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Code from '../components/icons/Code.astro';
---

<Layout 
title="Portfolio Dana Embon - Web Developer Front-End"
description='Explore the portfolio of Dana Embon, a skilled Web Developer specializing in creating modern web applications using HTML, CSS, JavaScript, and React. With a strong focus on intuitive design and seamless user experiences, Dana brings ideas to life through clean, responsive, and efficient code.'>
	<main class="px-4">
		<SectionContainer  class="py-44 pb-32">
			
			<img 
			class=" rounded-full size-12 mb-4" 
			src="/danaEmbon.webp" 
			alt="Dana Embon photo"
			/>
			<h1 class=" text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey, I'm Dana Embon 
				<a 
				href="https://www.linkedin.com/in/danaembon/"
				target="_blank"
				rel="noopener"
				class="flex  justify-center items-center">
					<Badge>Open to work </Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span class=" text-yellow-200/90">Web Developer</span> passionate about turning ideas into modern intuitive digital experiences. <span class=" text-yellow-200/90">From Givatayim, Israel.</span> Explore my work to see how I can help take your project to the next level.
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap ">
					<SocialPill href="https://www.linkedin.com/in/danaembon/">
					<LinkedInIcon class="size:4 md:size-6"/>
						Linkedin
					</SocialPill>
					<SocialPill href="https://github.com/danaembon">
					<GitHubIcon class="size:4 md:size-6"/>
						GitHub
					</SocialPill>
					<SocialPill href=`mailto:dembon3@gmail.com`>
					<MailIcon class="size:4 md:size-6"/>
						dembon3@gmail.com
					</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7"/>
				Experience
			</h2>
			<Experience />
		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7"/>
				Projects
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>