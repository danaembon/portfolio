---
import HTMLIcon from '../components/icons/HTML.astro'
import CSSIcon from '../components/icons/CSS.astro'
import JavaScriptIcon from '../components/icons/JavaScript.astro'
import ReactIcon from '../components/icons/React.astro'
import GoogleIcon from '../components/icons/Google.astro'
import ExpressIcon from '../components/icons/Express.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import NodeJSIcon from '../components/icons/NodeJS.astro'
import NPMIcon from '../components/icons/NPM.astro'
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-orange-500/20 text-white",
        icon: HTMLIcon,
    },
    CSS: {
        name: "CSS",
        class: "bg-sky-500/20 text-white",
        icon: CSSIcon,
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-yellow-500/20 text-white",
        icon: JavaScriptIcon,
    },
    React: {
        name: "React",
        class: "bg-sky-500/20 text-white",
        icon: ReactIcon,
    },
    Google: {
        name: "Google",
        class: "bg-red-500/20 text-white",
        icon: GoogleIcon,
    },
    Express: {
        name: "Express",
        class: "bg-gray-500/20 text-white",
        icon: ExpressIcon,
    },
    NodeJS: {
        name: "NodeJS",
        class: "bg-green-500/20 text-white",
        icon: NodeJSIcon,
    },
    NPM: {
        name: "NPM",
        class: "bg-red-500/20 text-white",
        icon: NPMIcon,
    },
}
const PROJECTS = [
    {
        title: 'Wedding Card',
        description: `This beautifully designed wedding invitation page, built with modern web technologies, provides all the essential details for the special day of Iair and Michu. Guests can easily RSVP through the site, with responses being seamlessly recorded in a Google Sheets document via Google API, allowing the couple to track confirmations in real-time. The page also integrates with Google Maps for easy navigation to the venue, ensuring a user-friendly experience across all devices. This invitation reflects the elegance and personal touch of the couple's celebration, inviting guests to join in their joyous occasion.`,
        link: 'https://casamiento-bce227035385.herokuapp.com/',
        github: 'https://github.com/danaembon/Casamiento',
        image: '/projectWedding.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.React, TAGS.Express, TAGS.Google, TAGS.NodeJS, TAGS.NPM]
    }
]
---
<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 mt-2`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-6" />
                Code
                
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
      </div>
    </div>
  </article>
      ))
    }
  </div>